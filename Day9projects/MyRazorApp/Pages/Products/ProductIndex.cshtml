@page
@model MyRazorApp.Pages.Products.ProductIndex
@{
    ViewData["Title"] = "ProductIndex";
    Layout="_Layout";

}

<h1>@ViewData["Title"]</h1>

<h2>Product List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>

            </tr>
        }
    </tbody>
</table>
